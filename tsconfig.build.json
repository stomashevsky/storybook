{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "rootDir": "src",
    "declaration": true,
    "emitDeclarationOnly": false,
    "declarationDir": "dist/types",
    "outDir": "dist/es",
    "sourceMap": true,
    "inlineSources": true,
    "allowImportingTsExtensions": false,
    "module": "ESNext",
    "target": "ES2022",
    "jsx": "react-jsx",
    "noEmit": false
  },
  "include": ["src/**/*"],
  "exclude": [
    "**/*.stories.tsx",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.mdx",
    "test",
    "scripts",
    "boilerplate-example",
    "public",
    ".storybook-base"
  ]
}
